<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tic_tac_toe_play"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.felipeacerbi.nfctest.activities.TicTacToePlayActivity">

    <TextView
        android:id="@+id/turn_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Turn"/>

    <TextView
        android:id="@+id/turn_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/turn_title"
        android:textSize="20sp"
        android:text="Turn"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/turn_name"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_centerVertical="true">
        <ImageView
            android:id="@+id/place1"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/x"/>

        <ImageView
            android:id="@+id/place2"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/x"/>

        <ImageView
            android:id="@+id/place3"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/x"/>

        <ImageView
            android:id="@+id/first_column"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/place1"
            android:layout_toStartOf="@id/place2"
            android:background="@color/colorPrimaryDark"/>


        <ImageView
            android:id="@+id/second_column"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/place2"
            android:layout_toStartOf="@id/place3"
            android:background="@color/colorPrimaryDark"/>

        <ImageView
            android:id="@+id/place4"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_centerVertical="true"
            android:src="@drawable/x"/>

        <ImageView
            android:id="@+id/place5"
            android:layout_width="110dp"
            android:layout_height="110dp"

            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/x"/>

        <ImageView
            android:id="@+id/place6"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/x"/>

        <ImageView
            android:id="@+id/first_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/place1"
            android:layout_above="@id/place4"
            android:background="@color/colorPrimaryDark"/>

        <ImageView
            android:id="@+id/place7"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/x"/>

        <ImageView
            android:id="@+id/place8"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/x"/>

        <ImageView
            android:id="@+id/place9"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/x"/>

        <ImageView
            android:id="@+id/second_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/place4"
            android:layout_above="@id/place7"
            android:background="@color/colorPrimaryDark"/>
    </RelativeLayout>

</RelativeLayout>
